with "../waveshare.gpr";

project Waveshare_Test is

   for Languages use ("Ada");
   for Source_Dirs use ("src");
   for Object_Dir use ".obj";
   for Exec_Dir use "bin";

   case Waveshare.TARGET is
      when "arm-linux-gnueabihf" | "armhf-linux" =>
         for Source_Dirs use project'Source_Dirs & ("src/target");

      when others =>
         for Languages use project'Languages &  ("C");
         for Source_Dirs use project'Source_Dirs & ("src/host");
         for Source_Dirs use project'Source_Dirs & ("../../c/lib/Driver");
         for Source_Dirs use project'Source_Dirs & ("../../c/lib/Config");
         for Source_Dirs use project'Source_Dirs & ("../../c/examples");
   end case;
   for Main use ("example-main.adb");

   package Builder is
      for Switches (others) use ("-j0", "-g", "-s");
      for Executable ("example-main.adb") use "main";
   end Builder;

   package Compiler is
      for Driver ("c") use "";
      for Switches ("ada") use ("-gnatX", "-gnata");
   end Compiler;

   package Binder is
      for Switches ("ada") use ("-E");
   end Binder;

end Waveshare_Test;

